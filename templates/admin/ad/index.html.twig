{% extends 'admin/base.html.twig' %}

{% block title %}Administration de {% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5"> Gestion des annonces</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-center">Id</th>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th class="text-center">RÃ©sas</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ad in ads %}
                <tr>
                    <td class="text-center">{{ ad.id }}</td>
                    <td>{{ ad.title }}</td>
                    <td>
                        <img src="{{ ad.author.picture }}" alt="Avatar de {{ ad.author.fullname }}" class="avatar avatar-mini mr-2">
                        {{ ad.author.fullname }}
                    </td>
                    <td class="text-center">
                        <span class="badge badge-warning rounded">{{ ad.bookings | length }}</span>
                    </td>
                    <td class="text-center">
                        <span class="badge badge-warning rounded">{{ ad.avgRating | number_format(1, ',', ' ') }}</span>
                    <td>
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
