{% extends 'base.html.twig' %}

{% block title %}Vos réservations {% endblock %}

{% block body %}

<div class="container"> 
    <h1>Réservations de {{ app.user.fullName }}</h1>
    <div class="alert alert-info mt-3">
        <p>Liste de vos réservations</p>
    </div>

    {% for booking in app.user.bookings %}

        <div class="row mt-4">
            <div class="col-4">
                <img src="{{ booking.ad.coverImage}}" alt="Phote de l'annonce {{ booking.ad.title }}" 
                    style="height: 200px; width: 80%; display:block; object-fit: cover">
            </div>
            <div class="col-8">
                <h4>{{ booking.ad.title }}</h4>
                <p>
                    Réservation <strong>n° {{ booking.id }} </strong>
                </p>
                <p>
                    Du {{ booking.startDate | date('d/m/Y') }} au {{ booking.endDate | date('d/m/Y') }}
                </p>
                <p>
                    D'un montant de {{ booking.amount }} &euro;
                </p>
                <a href="{{ path('booking_show', {'id': booking.id}) }}" class="btn btn-warning">Détails</a>
            </div>
        </div>

    {% endfor %}

</div>

{% endblock %}