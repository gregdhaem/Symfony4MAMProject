{% extends 'base.html.twig' %}

{% block title %}Modifier le profil {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5">Modifiez votre profil</h1>
        {{ form_start(form) }}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2 class="alert-heading">Informations Générales</h2>
                    <hr>
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.picture) }}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light clearfix">
                <h2 class="alert-heading">Détails</h2>
                    <hr>
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.description) }}
                    <hr>
                    <button type="submit" class="btn btn-warning float-right"><i class="fas fa-check"></i> Validez</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}