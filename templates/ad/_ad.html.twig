{% set url = path('ads_show', {'slug': ad.slug})%}
    <div class="col-md-4">
        <div class="card bg-light mb-3">
            <div class="card-header text-center">
                {{ ad.rooms }} chambre(s)<strong> {{ ad.price }} &euro; / nuit</strong><br>
                {% if ad.comments | length > 0%}
                    <small>{% include 'partials/rating.html.twig' with {'rating': ad.avgRating} %}</small>
                {% else %}
                    <small>Pas encore noté</small>
                {% endif %}
            </div>
            <a href="{{ url }}">
                <img src="{{ ad.coverImage }}" alt="Image de l'appartement" 
                    style="height: 250px; width: 100%; display:block; object-fit: cover">
            </a>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="{{ url }}">
                        {{ ad.title }}
                    </a>
                </h4>
                <p class="card-text">
                    {{ ad.introduction }}
                </p>
                <a href="{{ url }}" 
                    class="btn btn-warning">Plus d'info</a>
                {% if app.user and app.user == ad.author %}
                    <a href="{{ path('ads_edit', {'slug': ad.slug}) }}" class="btn btn-warning">Modifiez</a>
                {% else %}
                    <a href="{{ path('booking_create', {'slug': ad.slug}) }}" class="btn btn-warning">Réservez</a>
                {% endif %}

            </div>
        </div>
    </div>   
